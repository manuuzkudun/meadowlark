<h1>Your Shopping Cart</h1>

{{!-- Show each of of the error messages in the cart.errors object --}}
{{#each cart.errors}}
  <div class="alert alert-danger">{{.}}</div>
{{/each}}

{{!-- Show each of of the warning messages in the cart.warnings object --}}
{{#each cart.warnings}}
  <div class="alert alert-warning">{{.}}</div>
{{/each}}

<table class="table table-striped">
  <thead>
    <tr>
      <td>Vacation</td>
      <td>Guests</td>
    </tr>
  </thead>
  <tbody>
    {{!-- for each vacation item print itÂ´s name and guests --}}
    {{#each cart.items}}
      <tr>
        <td>{{vacation.name}}</td>
        <td>{{guests}}</td>
      </tr>
    {{/each}}
    
  </tbody>
</table>

{{!-- Button with link to cart checkout --}}
<a class="btn btn-primary" href="/cart/checkout">Checkout</a>